{
    "manifest_version": 3,
    "name": "TikTok Agent",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Open TikTik Agent"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.tiktok.com/*",
                "http://*.tiktok.com/*"
            ],
            "js": ["content.js"]
        }
    ]
}
